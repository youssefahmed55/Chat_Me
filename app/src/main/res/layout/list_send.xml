<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_20sdp"
    android:layout_gravity="end"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/shape_bg_outgoing_bubble"
        android:paddingStart="@dimen/_8sdp"
        android:paddingEnd="@dimen/_17sdp"
        android:paddingBottom="@dimen/_2sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

         >
       <LinearLayout
           android:id="@+id/linear_send"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_marginBottom="@dimen/_2sdp"
           >
           <TextView
               android:id="@+id/text_listSRMessage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:fontFamily="@font/poppins_regular"
               android:textAlignment="viewStart"
               android:textColor="@color/black"
               android:textSize="@dimen/_14ssp" />

           <ImageView
               android:id="@+id/image_listSRMessage"
               android:layout_width="@dimen/_150sdp"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/_5sdp"
               android:scaleType="fitXY" />

       </LinearLayout>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_gravity="end"
           >

           <TextView
               android:id="@+id/textDate_listSRMessage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="@dimen/_5sdp"
               android:fontFamily="@font/poppins_regular"
               android:text="55:00 pm"
               android:textColor="@color/c2"
               android:textSize="@dimen/_6ssp" />

           <ImageView
               android:id="@+id/imageRead_listSRMessage"
               android:layout_width="@dimen/_10sdp"
               android:layout_height="@dimen/_10sdp"
               android:layout_marginStart="@dimen/_2sdp"
               android:src="@drawable/ic_baseline_check_24" />
       </LinearLayout>



    </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>



