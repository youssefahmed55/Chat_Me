<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="start"
    android:gravity="start"
    android:background="@drawable/shape_bg_incoming_bubble"
    android:paddingEnd="@dimen/_5sdp"
    android:paddingStart="@dimen/_18sdp"
    android:paddingBottom="@dimen/_2sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginEnd="@dimen/_20sdp"
    >

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        android:gravity="start"
        android:layout_marginBottom="@dimen/_2sdp"
        >

        <TextView
            android:id="@+id/text_listSRMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_14ssp"
            android:text="Hi youssef How are you where are you bro"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:layout_gravity="start"
            android:gravity="start"
            />

        <ImageView
            android:id="@+id/image_listSRMessage"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textDate_listSRMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_6ssp"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/c2"
        android:layout_gravity="end"
        android:layout_marginStart="@dimen/_5sdp"
        android:text="55:00 pm"

        />
    <ImageView
        android:id="@+id/imageRead_listSRMessage"
        android:src="@drawable/ic_baseline_check_24"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_10sdp"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_2sdp"
        />

</LinearLayout>